<div class="container">
  <div class="row offset2">
    <div id="clothingedit">

      <h1>Edit Clothing</h1>
      <%= form_for @clothing do |f| %>

        <%= f.label :name, "Clothing Name" %>
        <%= f.text_field :name %>

        <%= f.label :description, "Description" %>
        <%= f.text_area :description %><br />

        <% @types.each do |type| %>
          <%= radio_button_tag(:type_id, type.id) %> 
          <%= type.name %><br />
        <% end %>

        <%= f.submit "Update Clothing", url: clothing_index_path, :method => :put %>
        <%= link_to("Back to Clothing List".html_safe, { :controller => "clothing", :action => "index" }) %>

      <% end %>

    </div>
  </div>
</div>